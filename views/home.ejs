<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Blogging app</title>
    <%- include("partials/head")%>
  </head>
  <body>
    <%- include("partials/navbar")%>
    <h1>Hello Dear</h1>
    <div class="container row row-cols-3 m-3 mt-3">
      <% blogs.forEach(blog => { %>
      <div class="card col m-3" style="width: 18rem">
        <img
          src="<%= blog.coverImageURL%>"
          class="card-img-top"
          alt="coverImage"
        />
        <div class="card-body">
          <h5 class="card-title"><%-blog.title%></h5>
          <p class="card-text"><%-blog.body%></p>
          <a href=" /blog/<%= blog._id%>" class="btn btn-primary">view</a>
        </div>
      </div>
      <% }) %>
    </div>
    <%- include("partials/scripts")%>
  </body>
</html>
